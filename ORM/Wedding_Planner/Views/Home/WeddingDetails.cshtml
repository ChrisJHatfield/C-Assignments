@model Wedding
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/WeddingDetails.css">
    <title>Wedding Details</title>
</head>
<body>
    <header>
        <h1>@Model.WedderOne and @Model.WedderTwo's Wedding</h1>
        <nav>
            <a href="/Dashboard">Dashboard</a>
            <a asp-action="Logout" asp-controller="LogReg">Log Out</a>
        </nav>
    </header>
    <main>
        <div id="guest-info">
            <h2>Date: @Model.Date.ToLongDateString()</h2>
            <h2>Guests:</h2>
            @foreach (User guest in ViewBag.guestsAttending)
            {
                <p>@guest.FirstName @guest.LastName</p>
            }
        </div>
        <div id="map">
            <h2>Wedding Location:</h2>
            <p>@Model.Address</p>
        </div>
    </main>
</body>
</html>